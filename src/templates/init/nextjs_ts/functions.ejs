@use "../breakpoints" as *;
@use "../colors" as *;
@use "../fonts" as *;

@function get-breakpoint($key) {
  $breakpoints-map: map-get($breakpoints, $key);

  @return $breakpoints-map;
}

@function get-color($key, $value) {
  $colors-map: map-get($colors, $key, $value);

  @return $colors-map;
}

@function get-font($key) {
  $fonts-map: map-get($fonts, $key);

  @return $fonts-map;
}
