* {
  border: 0;
  box-sizing: border-box;
  color: var(--white);
  font-size: 16px;
  list-style: none;
  margin: 0;
  padding: 0;
  text-decoration: none;
}

:root {
  --black: #000000;
  --blue: #006aeb;
  --white: #ffffff;

  --complementary-colors: #ee7752, #e73c7e, #23a6d5, #23d5ab;

  --desktop: 2560px;

  --laptop-l: 1440px;
  --laptop-m: 1280px;
  --laptop-s: 1024px;

  --tablet-l: 900px;
  --tablet-m: 768px;
  --tablet-s: 600px;

  --mobile-l: 425px;
  --mobile-m: 375px;
  --mobile-s: 320px;
}

body {
  animation: gradient-animation 15s ease infinite;
  background-image: linear-gradient(-45deg, var(--complementary-colors));
  background-size: 400% 400%;
  height: 100vh;
}

@keyframes gradient-animation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
