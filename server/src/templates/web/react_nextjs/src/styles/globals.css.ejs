@tailwind base;
@tailwind components;
@tailwind utilities;

* {
  border: 0;
  box-sizing: border-box;
  color: #ffffff;
  font-size: 16px;
  list-style: none;
  margin: 0;
  padding: 0;
  text-decoration: none;
}

@layer components {
  .animated-btn {
    background-color: #006aeb;

    border-bottom: 3px solid #00000080;
    border-right: 3px solid #00000080;
  }

  .animated-btn:active {
    border-bottom: none;
    border-left: 3px solid #00000080;
    border-right: none;
    border-top: 3px solid #00000080;
  }
}
